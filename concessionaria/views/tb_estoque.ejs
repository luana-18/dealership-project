<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Estoque de Carros</title>
    <!-- Link do Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body class="bg-light">

    <div class="container mt-5">
      <h1 class="text-center mb-4 text-primary">Estoque de Carros</h1>

      <!-- Tabela estilizada com Bootstrap -->
      <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>ID Estoque</th>
            <th>ID Carro</th>
            <th>Ano</th>
            <th>Cor</th>
            <th>Preço</th>
            <th>ID Modelo</th>
            <th>ID Versão</th>
          </tr>
        </thead>
        <tbody>
          <% for (let item of resultado) { %>
            <tr>
              <td><%= item.id_estoque %></td>
              <td><%= item.Id_carro %></td>
              <td><%= item.Ano %></td>
              <td><%= item.Cor %></td>
              <td><%= item.Preço %></td>
              <td><%= item.id_modelo %></td>
              <td><%= item.id_versão %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <!-- Script do Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
